{
    "name": "Image Downloader",
    "version": "1.0",
    "manifest_version": 2,
    "description": "This extension will download all images in the current page",
    "icons": {
        "128": "128-icon.png",
        "48": "48-icon.png",
        "16": "16-icon.png"

    },
    "permissions": [
        "storage",
        "downloads",
        "activeTab",
        "declarativeContent",
        "contextMenus"
    ],


    "browser_action": {
        "default_icon": "16-icon.png"
    },


    "background": {
        "scripts": ["background.js", "imgdwnld.js"]
    }
}