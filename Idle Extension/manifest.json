{
    "name": "idle Alert",
    "version": "1.0",
    "manifest_version": 2,
    "description": "This extension will alerts on page idle",
    "icons": {
        "128": "128-icon.png",
        "48": "48-icon.png",
        "16": "16-icon.png"

    },
    "permissions": [
        "idle",
        "notifications"

    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "16-icon.png",
        "default_popup": "popup.html"

    }

}